<h1>Editing Book</h1>
<div>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>error
   <% @book.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
 <% end %>
</div>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>
  <div>Title</div>
  <%= f.text_field :title %>
  <div>Body</div>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>
<% end %>
<%=link_to "Show", book_path(@book.id) %><span>|</span><span><%=link_to "Back", books_path %></span>